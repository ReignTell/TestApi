handlers.helloWorld = function(args, context) {
    log.info("Starting HelloWorld function");

    try {
        // Your core logic
        var message = "Hello World from Cloud Script!";
        log.info("Returning message: " + message);
        return { message: message };
    } catch (e) {
        log.error("Error in helloWorld function: " + e);
        return { error: "Something went wrong!" };
    }
};
